<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_profile_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_profile_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#242235"
        app:layout_constraintBottom_toBottomOf="@id/guideline_my_profile_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </View>

    <TextView
        android:id="@+id/setting_my_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audio_wide"
        android:text="@string/my_profile_settings_tv"
        android:textColor="@color/white"
        android:textSize="@dimen/_22sp_my_profile_setting_tv"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_start"
        app:layout_constraintTop_toTopOf="@+id/guideline_my_profile_top"
        />

        <ImageView
            android:id="@+id/iv_my_profile_icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/me_round"
            android:contentDescription="@string/person_image"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintEnd_toEndOf="@id/tv_my_profile_user_name"
            app:layout_constraintStart_toStartOf="@+id/tv_my_profile_user_name"
            app:layout_constraintBottom_toTopOf="@id/guideline_my_profile_iv"
            />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_profile_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_profile_text_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/tv_my_profile_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audio_wide"
        android:text="@string/my_profile_user_name"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/guideline_my_profile_iv"
        app:layout_constraintBottom_toTopOf="@id/tv_my_profile_career"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        />

    <TextView
        android:id="@+id/tv_my_profile_career"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audio_wide"
        android:text="@string/my_profile_career"
        android:textColor="#78909C"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_my_profile_user_name"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        app:layout_constraintBottom_toTopOf="@id/tv_my_profile_address"

        />

    <TextView
        android:id="@+id/tv_my_profile_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audio_wide"
        android:text="@string/my_profile_address_tv"
        android:textColor="#78909C"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_profile_career"
        app:layout_constraintBottom_toTopOf="@id/guideline_my_profile_text_views"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_profile_social_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <ImageView
        android:id="@+id/my_profile_facebook_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/my_profile_linkedin_icon_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/guideline_my_profile_social_media"
        android:contentDescription="@string/icon_link_to_facebook"
        android:src="@drawable/group_facebook"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/my_profile_linkedin_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/my_profile_instagram_icon_iv"
        app:layout_constraintStart_toEndOf="@id/my_profile_facebook_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/guideline_my_profile_social_media"
        android:contentDescription="@string/icon_link_to_linkedin"
        android:src="@drawable/group_linkedin"
        android:clickable="true"
        android:focusable="true"
        />

    <ImageView
        android:id="@+id/my_profile_instagram_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/my_profile_linkedin_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/guideline_my_profile_social_media"
        android:contentDescription="@string/icon_link_to_instagram"
        android:src="@drawable/group_instagram"
        android:clickable="true"
        android:focusable="true"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_profile_button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_profile_button_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/my_profile_edit_profile_bn"
        android:textAllCaps="false"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/my_profile_button_edit_file"
        app:layout_constraintTop_toBottomOf="@id/guideline_my_profile_button_first"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_my_profile_button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/my_profile_button_view_my_contacts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/my_profile_button_view_my_contacts_file"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/my_profile_button_view_my_contacts"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/guideline_my_profile_button_second"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical_end"
        />




</androidx.constraintlayout.widget.ConstraintLayout>