<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_user_background"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_user_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_user_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_user_text_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.14" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_user_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_item_user_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <ImageView
        android:id="@+id/iv_item_user_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:contentDescription="@string/iv_user_icon"
        app:layout_constraintStart_toStartOf="@id/guideline_item_user_start"
        app:layout_constraintTop_toTopOf="@id/guideline_item_user_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_item_user_bottom" />

    <TextView
        android:id="@+id/tv_item_user_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_user_name"
        android:textSize="@dimen/medium_text"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toTopOf="@id/guideline_item_user_top"
        app:layout_constraintStart_toEndOf="@id/guideline_item_user_text_views"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_user_delete_user"
        app:layout_constraintBottom_toTopOf="@id/tv_item_user_profession"
        />

    <TextView
        android:id="@+id/tv_item_user_profession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tv_profession"
        android:textSize="@dimen/small_text"
        android:textColor="@color/black"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="@id/guideline_item_user_bottom"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_user_delete_user"
        app:layout_constraintStart_toEndOf="@id/guideline_item_user_text_views"
        app:layout_constraintTop_toBottomOf="@id/tv_item_user_user_name" />

    <ImageView
        android:id="@+id/iv_item_user_delete_user"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/delete"
        app:layout_constraintEnd_toEndOf="@id/guideline_item_user_end"
        app:layout_constraintTop_toTopOf="@id/guideline_item_user_top"
        app:layout_constraintBottom_toBottomOf="@id/tv_item_user_profession"
        android:contentDescription="@string/iv_item_user_delete_ic" />




</androidx.constraintlayout.widget.ConstraintLayout>